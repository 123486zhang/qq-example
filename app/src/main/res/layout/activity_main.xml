<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:padding="16dp"
    android:background="@mipmap/bg1"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/ping"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:text="请输入实时Ping码"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/text1"
        android:layout_marginTop="210dp"
        android:digits="0123456789"
        android:maxLength="4"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:layout_width="130dp"
        android:layout_height="80dp"
       />
    <Button
        android:id="@+id/btn11"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/text1"
        android:background="@android:color/transparent"
        android:text="1"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn12"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btn11"
        android:layout_below="@id/text1"
        android:background="@android:color/transparent"
        android:text="2"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn13"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btn12"
        android:layout_below="@id/text1"
        android:background="@android:color/transparent"
        android:text="3"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn14"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/btn11"
        android:background="@android:color/transparent"
        android:text="4"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn15"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btn11"
        android:layout_below="@id/btn11"
        android:background="@android:color/transparent"
        android:text="5"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn16"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btn12"
        android:layout_below="@id/btn11"
        android:background="@android:color/transparent"
        android:text="6"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn17"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/btn14"
        android:background="@android:color/transparent"
        android:text="7"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn18"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btn11"
        android:layout_below="@id/btn14"
        android:background="@android:color/transparent"
        android:text="8"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn19"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btn12"
        android:layout_below="@id/btn14"
        android:background="@android:color/transparent"
        android:text="9"
        android:textSize="30sp" />
    <Button
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:background="@android:color/transparent"
        android:text="获取Ping码"
        android:layout_below="@id/image2"
        android:layout_marginLeft="255dp"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btn10"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btn11"
        android:layout_below="@id/btn17"
        android:background="@android:color/transparent"
        android:text="0"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/btn12"
        android:layout_below="@id/btn17"
        android:background="@android:color/transparent"
        android:text="确认"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/btn17"
        android:background="@android:color/transparent"
        android:text="返回"
        android:textSize="30sp" />
    <com.xuexiang.xupdatedemo.ImageViewCriCle
        android:id="@+id/image2"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/mcat"
        android:scaleType="center"
        android:layout_marginLeft="260dp"
        />
    <Button
    android:id="@+id/text4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:text="检查更新"
    android:layout_below="@id/btn10"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
    android:textSize="22sp"
    />
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@id/text5"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@id/text6"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        />


</RelativeLayout>